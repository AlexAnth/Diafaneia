<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/relativeLayout8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#03A9F4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/relativeLayout12">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/info_btn"
            android:layout_alignParentEnd="false"
            android:src="@drawable/info_icon"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bookmark_btn"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:src="@drawable/bookmark_icon"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="2dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView6"
            android:src="@drawable/iconbte_80x50_radius"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Διαφάνεια"
            android:id="@+id/textView19"
            android:textColor="#ffffff"
            android:shadowColor="#b5343434"
            android:singleLine="false"
            android:textSize="27sp"
            android:gravity="bottom"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Αποτελέσματα"
            android:id="@+id/textView20"
            android:textSize="20dp"
            android:layout_alignStart="@+id/imageView6"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout12"
        android:layout_marginTop="115dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/scrollView2"
            android:fillViewport="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="150dp" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_card"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="65dp"
        android:id="@+id/imageView4"
        android:background="#81D4F9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:id="@+id/imageView10"
        android:background="#81D4F9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/background_with_shadow"

        android:id="@+id/relativeLayout9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/res_number"
            android:textColor="#03A9F4"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Αναζήτηση Αποφάσεων..."
            android:fontFamily="sans-serif-light"/>
    </RelativeLayout>

</FrameLayout>
