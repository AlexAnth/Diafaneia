<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/upper_right"
        android:background="#81D4F9"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/low_right"
        android:background="#03A9F4"
        android:layout_below="@+id/upper_right"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/upper_left"
        android:background="#03A9F4" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/low_left"
        android:layout_below="@+id/upper_right"
        android:background="#81D4F9" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/blue_background_bottom"
        android:layout_alignParentBottom="true"
        android:background="#03A9F4" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeL"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_with_shadow">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:contentDescription="a"
            android:background="#03A9F4" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/info_btn"
            android:layout_alignParentEnd="false"
            android:src="@drawable/info_icon"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bookmark_btn"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:src="@drawable/bookmark_icon"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:layout_marginRight="62dp"
            android:layout_marginTop="2dp" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView19"
            android:src="@drawable/iconbte_80x50_radius"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Διαφάνεια"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:shadowColor="#b5343434"
            android:singleLine="false"
            android:textSize="35sp"
            android:gravity="bottom"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView19"
            android:layout_toEndOf="@+id/imageView19"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Υπηρεσία / Φορέας"
            android:id="@+id/TextInput"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView19"
            android:layout_alignStart="@+id/imageView19"
            android:textSize="25sp"
            android:layout_marginLeft="65dp" />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="150dp"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"
                    android:layout_marginTop="25dp"
                    android:visibility="gone">

                </android.support.v7.widget.RecyclerView>



            </FrameLayout>




        </ScrollView>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
