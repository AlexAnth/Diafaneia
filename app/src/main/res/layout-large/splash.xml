<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0288D1">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/load"
        android:src="@drawable/spinner_al"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Βουλή των Ελλήνων"
        android:id="@+id/textView15"
        android:fontFamily="sans-serif-light"
        android:textSize="40dp"
        android:layout_above="@+id/load"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="204dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView16"
        android:src="@drawable/logo_white_border"
        android:layout_above="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Διαφάνεια"
        android:id="@+id/textView16"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/imageView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>